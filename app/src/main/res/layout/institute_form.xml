<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearinstitute">
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/takefingerdata"
                android:text="Capture Fingers"
                android:background="@color/colorAccent"
                android:textColor="@color/textColorPrimary"
                android:layout_gravity="center" />
            <EditText
                android:layout_marginTop="10dp"
                android:hint="Enter Name of Institute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/institute_name"
                android:inputType="textPersonName"/>
            <EditText
                android:layout_marginTop="10dp"
                android:hint="GST of the Institute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/institute_gst"
                android:inputType="text"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/intitute_email"
                android:hint="Enter Institute Email"
                android:inputType="textEmailAddress"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/intitute_owner_name"
                android:hint="Name Of Owner"
                android:inputType="textPersonName"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/institute_owner_email"
                android:inputType="textEmailAddress"
                android:hint="Email of the owner" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/insitute_owner_contact"
                android:hint="Contact Number of the Owner"
                android:inputType="phone"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/institute_owner_aadhar"
                android:inputType="number"
                android:maxLength="12"
                android:hint="Aadhar Number of the Owner"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/institute_state"
                android:inputType="text"
                android:hint="Institute state"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/institute_city"
                android:inputType="text"
                android:hint="Institute City"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/institute_place"
                android:inputType="text"
                android:hint="Institute Place"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/institute_address"
                android:inputType="text"
                android:hint="Institute Address"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/institute_osfees"
                android:inputType="number"
                android:maxLength="12"
                android:hint="Institute Omnispace Fees"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/institute_desciption"
                android:hint="Enter Institute Description"
                android:inputType="textMultiLine" />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BANK DETAILS" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/institute_bank_name"
                android:hint="Enter Bank Name"
                android:inputType="text"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/institute_bank_accountnum"
                android:hint="Enter Bank Account Number" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/institute_bank_ifsccode"
                android:hint="Enter Bank IFSC code"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="17sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Capture Institute Photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:drawableTint="@color/textColorPrimary"
                    android:drawableRight="@drawable/ic_add_black_24dp"
                    android:layout_weight="1"
                    android:paddingRight="20dp"
                    android:id="@+id/institute_Add_Pictures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Pictures"
                    android:background="@color/colorAccent"
                    android:textColor="@color/textColorPrimary"/>
            </LinearLayout>

            <Button
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/submitinst"
                android:text="Submit"
                android:background="@color/colorAccent"
                android:textColor="@color/textColorPrimary"
                android:layout_gravity="center" />
<View
    android:layout_width="match_parent"
    android:layout_height="50dp"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>