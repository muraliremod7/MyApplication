<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5fb0c9"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/lineargym">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/txtnamecs"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtnamecs"
                android:background="@drawable/rounded_corner"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GST"
                android:id="@+id/gstcs"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtcs"
                android:background="@drawable/rounded_corner"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of the owner"
                android:id="@+id/txtnameofownercs"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtnameofownercs"
                android:background="@drawable/rounded_corner"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password of the owner"
                android:id="@+id/txtpwdofownercs"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtpwdofownercs"
                android:background="@drawable/rounded_corner"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:id="@+id/txtemailgym"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtemailgym"
                android:background="@drawable/rounded_corner"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rlspinnergym">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:id="@+id/txtlocgym"/>

                <Spinner
                    android:id="@+id/locationspinnergym"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select"

                    />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Number of the Owner"
                android:id="@+id/txtcontactgym"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtcontactownergym"
                android:background="@drawable/rounded_corner"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email of the Owner"
                android:id="@+id/txtemailofownercs"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtemailofownercs"
                android:background="@drawable/rounded_corner"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aadhar Number of the Owner"
                android:id="@+id/txtadharnumgym"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtaadharnumgym"
                android:background="@drawable/rounded_corner"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of Worker"
                android:id="@+id/txtnameofworgym"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtnameworkgym"
                android:background="@drawable/rounded_corner"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Number of Worker"
                android:id="@+id/txtcontactofworkergym"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtcontactofworkgym"
                android:background="@drawable/rounded_corner"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password of worker"
                android:id="@+id/txtpwdcs"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtpwdcs"
                android:background="@drawable/rounded_corner"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Worker Pin"
                android:id="@+id/txtworkerpin"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtworkerpin"
                android:background="@drawable/rounded_corner"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Owner Pin"
                android:id="@+id/txownerpincs"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtownerpincs"
                android:background="@drawable/rounded_corner"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/txtdescs"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtdes"
                android:background="@drawable/rounded_corner"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rel7gym">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Photos :"
                    android:id="@+id/txtphotocs"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imgcs"
                    android:layout_marginLeft="150dp"
                    android:background="@mipmap/ic_launcher"
                    />
            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Image"
                android:id="@+id/selectimggym"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/submitgym"
                android:text="Submit"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
